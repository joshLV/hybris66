<config xmlns="http://www.hybris.com/cockpit/config" xmlns:y="http://www.hybris.com/cockpit/config/hybris">

	<!-- Explorer Tree configuration -->
	<context merge-by="module" parent="auto" component="explorer-tree">
		<explorer-tree:explorer-tree xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree">
			<explorer-tree:navigation-node id="hmc_treenode_system" merge-mode="append">
				<explorer-tree:navigation-node id="hmc.solrfacetsearch">
					<explorer-tree:type-node code="AbstractAsSearchProfile" id="hmc_type_tree_searchprofile" />
					<explorer-tree:type-node code="AsSearchProfileActivationSet" id="hmc_type_tree_searchprofileactivationset" />
				</explorer-tree:navigation-node>
			</explorer-tree:navigation-node>
		</explorer-tree:explorer-tree>
	</context>

	<context type="AbstractAsSearchProfile">
		<context merge-by="type" parent="GenericItem" component="base">
			<y:base>
				<y:labels>
					<y:label>code + ' - ' + @labelService.getObjectLabel(itemtype)</y:label>
				</y:labels>
			</y:base>
		</context>

		<context merge-by="type" parent="GenericItem" component="listview">
			<list-view:list-view xmlns:list-view="http://www.hybris.com/cockpitng/component/listView" refresh-after-object-creation="true">
				<list-view:column qualifier="code" />
				<list-view:column qualifier="name" />
				<list-view:column qualifier="indexType" />
				<list-view:column qualifier="catalogVersion" />
				<list-view:column qualifier="itemtype" />
			</list-view:list-view>
		</context>

		<context merge-by="type" parent="GenericItem" component="advanced-search">
			<advanced-search:advanced-search xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">
				<advanced-search:field-list>
					<advanced-search:field name="code" selected="false" />
					<advanced-search:field name="name" selected="false" />
					<advanced-search:field name="indexType" selected="false" />
					<advanced-search:field name="catalogVersion" selected="false" />
				</advanced-search:field-list>
			</advanced-search:advanced-search>
		</context>

		<context merge-by="type" parent="GenericItem" component="editor-area">
			<editorArea:editorArea xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
				<editorArea:essentials>
					<editorArea:essentialSection name="hmc.essential">
						<editorArea:attribute qualifier="code" />
						<editorArea:attribute qualifier="name" />
						<editorArea:attribute qualifier="indexType"
							editor="de.hybris.platform.adaptivesearchbackoffice.editors.configurabledropdown">
							<editorArea:editor-parameter>
								<editorArea:name>dataProvider</editorArea:name>
								<editorArea:value>asIndexTypeDataProvider</editorArea:value>
							</editorArea:editor-parameter>
						</editorArea:attribute>
						<editorArea:attribute qualifier="catalogVersion" />
					</editorArea:essentialSection>
				</editorArea:essentials>
				<editorArea:tab name="tab.configuration.assearchprofile">
					<editorArea:section name="sec.configuration.assearchprofile.details">
						<editorArea:attribute qualifier="activationSet">
							<editorArea:editor-parameter>
								<editorArea:name>isNestedObjectCreationDisabled</editorArea:name>
								<editorArea:value>true</editorArea:value>
							</editorArea:editor-parameter>
							<editorArea:editor-parameter>
								<editorArea:name>referenceSearchCondition_catalogVersion</editorArea:name>
								<editorArea:value>{parentObject.catalogVersion}</editorArea:value>
							</editorArea:editor-parameter>
							<editorArea:editor-parameter>
								<editorArea:name>referenceSearchCondition_indexType</editorArea:name>
								<editorArea:value>{parentObject.indexType}</editorArea:value>
							</editorArea:editor-parameter>
						</editorArea:attribute>
					</editorArea:section>
				</editorArea:tab>
			</editorArea:editorArea>
		</context>
		
		<context component="editorareaactions" merge-by="type" parent="auto">
  			<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
    			<y:group qualifier="common">
    				<y:action action-id="com.hybris.cockpitng.action.delete" property="currentObject"/>
					<y:action action-id="com.hybris.backoffice.widgets.actions.sync" property="currentObject"/>
    			</y:group>
  			</y:actions>
		</context>
		
		<context component="collectioneditorareaactions" merge-by="type" parent="auto">
  			<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
    			<y:group qualifier="common">
    				<y:action action-id="com.hybris.cockpitng.action.delete" property="currentObject"/>
					<y:action action-id="com.hybris.backoffice.widgets.actions.sync" property="currentObject"/>
    			</y:group>
  			</y:actions>
		</context>

		<context component="create-wizard">
			<wz:flow xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config" id="as-search-profile-create-wizard" title="create.title(ctx.TYPE_CODE)">
				<wz:prepare id="prepare">
					<wz:initialize property="newItem" type="ctx.TYPE_CODE" />
				</wz:prepare>
				<wz:step id="step1" label="create.assearchprofile.essential.label" sublabel="create.assearchprofile.essential.sublabel">
					<wz:content id="step1.content">
						<wz:property-list root="newItem">
							<wz:property qualifier="code" />
							<wz:property qualifier="name" />
							<wz:property qualifier="indexType" editor="de.hybris.platform.adaptivesearchbackoffice.editors.configurabledropdown">
								<wz:editor-parameter>
									<wz:name>dataProvider</wz:name>
									<wz:value>asIndexTypeDataProvider</wz:value>
								</wz:editor-parameter>
							</wz:property>
							<wz:property qualifier="catalogVersion" />
						</wz:property-list>
					</wz:content>
					<wz:navigation id="step1.navigation">
						<wz:cancel />
						<wz:done visible="newItem.code != null AND newItem.indexType != null">
							<wz:save property="newItem" />
						</wz:done>
					</wz:navigation>
				</wz:step>
			</wz:flow>
		</context>

		<context component="create-wizard-with-parent">
			<wz:flow xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config" id="as-search-profile-create-wizard-with-parent" title="create.title(ctx.TYPE_CODE)">
				<wz:prepare id="prepare">
					<wz:initialize property="newItem" type="ctx.TYPE_CODE" />
					<wz:assign property="newItem.indexType" value="ctx.parentObject.indexType" />
					<wz:assign property="newItem.catalogVersion" value="ctx.parentObject.catalogVersion" />
				</wz:prepare>
				<wz:step id="step1" label="create.assearchprofile.essential.label" sublabel="create.assearchprofile.essential.sublabel">
					<wz:content id="step1.content">
						<wz:property-list root="newItem">
							<wz:property qualifier="code" />
							<wz:property qualifier="name" />
						</wz:property-list>
					</wz:content>
					<wz:navigation id="step1.navigation">
						<wz:cancel />
						<wz:done visible="newItem.code != null AND newItem.indexType != null">
							<wz:save property="newItem" />
						</wz:done>
					</wz:navigation>
				</wz:step>
			</wz:flow>
		</context>
	</context>

	<context type="AsSimpleSearchProfile">
