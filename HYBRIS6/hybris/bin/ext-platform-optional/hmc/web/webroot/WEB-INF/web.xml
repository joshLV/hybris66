	-->
	
	<filter-mapping>
		<filter-name>XSSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>hmcFilterChain</filter-name>
		<servlet-name>hmc</servlet-name>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>hmcFilterChain</filter-name>
		<servlet-name>prototype</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>hmcFilterChain</filter-name>
		<servlet-name>filedownload</servlet-name>
	</filter-mapping>

	<!-- <filter-mapping>
		<filter-name>hmcFilterChain</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
  -->
   <filter-mapping>
     <filter-name>hmcFilterChain</filter-name>
     <url-pattern>/*</url-pattern>
   </filter-mapping>
   
   <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>WEB-INF/hmc-web-spring.xml</param-value>
   </context-param>
  
   <listener>
    <listener-class>de.hybris.platform.spring.HybrisContextLoaderListener</listener-class>
   </listener>
   
   <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
   </listener>

	<!--
	<filter-mapping>
      <filter-name>profilingfilter</filter-name>
      <url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	
    <filter-mapping>
      <filter-name>profilingfilter</filter-name>
	  <servlet-name>hmc</servlet-name>
    </filter-mapping>
	-->
	
	<servlet>
		<servlet-name>hmc</servlet-name>
		
		<servlet-class>de.hybris.platform.hmc.HMCMasterServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>filedownload</servlet-name>
		<servlet-class>de.hybris.platform.hmc.FileDownloadServlet</servlet-class>
	</servlet>
	

	<servlet>
		<servlet-name>prototype</servlet-name>
		<servlet-class>de.hybris.platform.hmc.ajax.PrototypeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>hmc</servlet-name>
		<url-pattern>/hybris</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>filedownload</servlet-name>
		<url-pattern>/FileDownloadServlet</url-pattern>
	</servlet-mapping>
	

	<servlet-mapping>
		<servlet-name>prototype</servlet-name>
		<url-pattern>/prototype</url-pattern>
	</servlet-mapping>

	<session-config>
      <session-timeout>240</session-timeout>
		<cookie-config>
			<secure>true</secure>
		</cookie-config>
 		<tracking-mode>COOKIE</tracking-mode>
    </session-config>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>hMC Secure URLs</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

</web-app>
